{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>{{ car.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>NbSeats</th>
                <td>{{ car.nbSeats }}</td>
            </tr>
            <tr>
                <th>NbDoors</th>
                <td>{{ car.nbDoors }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ car.name }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ car.cost }}</td>
            </tr>
        </tbody>
    </table>

    <div>
    <a class="btn btn-warning" href="{{ path('app_admin_car_edit', {'id': car.id}) }}">edit</a>
    {{ include('admin/car/_delete_form.html.twig') }}

    <a class="btn btn-primary mt-1" href="{{ path('app_admin_car_index') }}">back to list</a>

{% endblock %}
