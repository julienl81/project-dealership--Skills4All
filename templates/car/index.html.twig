{% extends 'base.html.twig' %}

{% block title %}Hello CarController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
   <h1>Car list</h1>

      <div class="btn-group" role="group" aria-label="Basic example">
      {% for carCategory in carCategories %}
        <a class="btn btn-secondary" href="{{ path('app_car_category', {'carCategory': carCategory.name}) }}">{{carCategory.name}}</a>
      {% endfor %}
        <button type="button" class="btn btn-secondary">All</button>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Nb of seat</th>
            <th scope="col">Nb of Doors</th>
            <th scope="col">Cost</th>
            <th scope="col">Category</th>
          </tr>
        </thead>
        <tbody>
          {% for car in cars %}
            <tr>
              <th scope="row">{{car.id}}</th>
              <td>{{car.name}}</td>
              <td>{{car.nbSeats}}</td>
              <td>{{car.nbDoors}}</td>
              <td>{{car.cost}}</td>
              <td>{{car.carCategory.name}}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>


      <div class="pagination justify-content-center ">
        {{ knp_pagination_render(cars, 'base/pagination.html.twig') }}
      </div>

</div>

{% endblock %}
